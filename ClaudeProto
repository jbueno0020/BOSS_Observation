    <!-- Help Modal -->
    <div class="modal" id="helpModal">
        <div class="modal-content modal-large">
            <div class="modal-header">
                <h2>BOSS Observation Tool - Help Guide</h2>
                <button class="modal-close" onclick="closeHelp()">&times;</button>
            </div>
            <div class="modal-body">
                <div class="help-section">
                    <h3>What is BOSS?</h3>
                    <p>BOSS (Behavioral Observation of Students in Schools) is a systematic direct observation tool used to measure student engagement in the classroom using momentary time sampling.</p>
                </div>
                <div class="help-section">
                    <h3>Getting Started</h3>
                    <ol>
                        <li>Enter student name, observer name, and select observation duration</li>
                        <li>Click "Start Observation" to begin the timer</li>
                        <li>Every 15 seconds, you'll be prompted to record behavior</li>
                        <li>Observe and record for Target Student (4x) then Comparison Peer (1x)</li>
                        <li>Take notes throughout the observation</li>
                    </ol>
                </div>
                <div class="help-section">
                    <h3>Behavior Codes</h3>
                    <div class="behavior-help">
                        <h4>On-Task Behaviors:</h4>
                        <ul>
                            <li><strong>AET (Active Engaged Time):</strong> Actively participating in assigned activity</li>
                            <li><strong>PET (Passive Engaged Time):</strong> Passively attending to assigned activity</li>
                        </ul>
                        <h4>Off-Task Behaviors:</h4>
                        <ul>
                            <li><strong>OFT-M (Off-Task Motor):</strong> Physical movement not related to task</li>
                            <li><strong>OFT-V (Off-Task Verbal):</strong> Verbal behavior not related to task</li>
                            <li><strong>OFT-P (Off-Task Passive):</strong> Not engaged, not disruptive</li>
                        </ul>
                    </div>
                </div>
                <div class="help-section">
                    <h3>Keyboard Shortcuts</h3>
                    <ul>
                        <li><kbd>Ctrl+1</kbd> - Record AET</li>
                        <li><kbd>Ctrl+2</kbd> - Record PET</li>
                        <li><kbd>Ctrl+3</kbd> - Record OFT-M</li>
                        <li><kbd>Ctrl+4</kbd> - Record OFT-V</li>
                        <li><kbd>Ctrl+5</kbd> - Record OFT-P</li>
                        <li><kbd>1-5</kbd> - Same behaviors when not typing</li>
                    </ul>
                </div>
                <div class="help-section">
                    <h3>Tips for Accurate Observations</h3>
                    <ul>
                        <li>Position yourself where you can see both students clearly</li>
                        <li>Record the behavior at the exact moment the beep sounds</li>
                        <li>Do not average behavior over the interval</li>
                        <li>Maintain objectivity - record what you see, not interpretations</li>
                        <li>Use notes to capture context and important details</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        // State
        let isRunning = false;
        let isPaused = false;
        let timer = null;
        let currentSeconds = 0;
        let currentInterval = 0;
        let totalIntervals = 0;
        let cyclePosition = 0; // 0-4: positions in the 5-interval cycle (4 target, 1 peer)
        let waitingForInput = false;
        let observations = [];
        let chart = null;
        let secondsUntilNextInterval = 15;
        let isNotesFieldFocused = false;
        let settings = {
            intervalLength: 15,
            volume: 0.3,
            theme: 'dark',
            observationPattern: '4:1' // 4 target : 1 peer
        };

        // LocalStorage keys
        const STORAGE_KEYS = {
            CURRENT_SESSION: 'boss_current_session',
            SAVED_SESSIONS: 'boss_saved_sessions',
            SETTINGS: 'boss_settings'
        };

        // Load settings from localStorage
        function loadSettings() {
            const saved = localStorage.getItem(STORAGE_KEYS.SETTINGS);
            if (saved) {
                settings = { ...settings, ...JSON.parse(saved) };
            }
        }

        // Save settings to localStorage
        function saveSettings() {
            localStorage.setItem(STORAGE_KEYS.SETTINGS, JSON.stringify(settings));
        }

        // Auto-save current session
        function autoSaveSession() {
            const sessionData = {
                studentName: document.getElementById('studentName').value,
                observerName: document.getElementById('observerName').value,
                observationDate: document.getElementById('observationDate').value,
                duration: document.getElementById('duration').value,
                notes: document.getElementById('observationNotes').value,
                observations: observations,
                currentSeconds: currentSeconds,
                currentInterval: currentInterval,
                cyclePosition: cyclePosition,
                isRunning: isRunning,
                isPaused: isPaused,
                timestamp: new Date().toISOString()
            };
            localStorage.setItem(STORAGE_KEYS.CURRENT_SESSION, JSON.stringify(sessionData));
        }

        // Load current session
        function loadCurrentSession() {
            const saved = localStorage.getItem(STORAGE_KEYS.CURRENT_SESSION);
            if (saved) {
                return JSON.parse(saved);
            }
            return null;
        }

        // Clear current session
        function clearCurrentSession() {
            localStorage.removeItem(STORAGE_KEYS.CURRENT_SESSION);
        }

        // Restore session
        function restoreSession(sessionData) {
            document.getElementById('studentName').value = sessionData.studentName || '';
            document.getElementById('observerName').value = sessionData.observerName || '';
            document.getElementById('observationDate').value = sessionData.observationDate || '';
            document.getElementById('duration').value = sessionData.duration || '15';
            document.getElementById('observationNotes').value = sessionData.notes || '';

            observations = sessionData.observations || [];
            currentSeconds = sessionData.currentSeconds || 0;
            currentInterval = sessionData.currentInterval || 0;
            cyclePosition = sessionData.cyclePosition || 0;

            updateTotalIntervals();
            updateDataTable();
            updateStats();
            updateChart();
            updateObservationCounts();
            updateTimerDisplay();

            // Update interval displays
            document.getElementById('currentInterval').textContent = currentInterval;
            document.getElementById('stickyCurrentInterval').textContent = currentInterval;

            // Update turn display
            updateTurnDisplay();

            if (sessionData.observations && sessionData.observations.length > 0) {
                showToast(`Restored session with ${sessionData.observations.length} observations`);
            }
        }

        // Save session to library
        function saveSessionToLibrary(sessionName) {
            const sessionData = {
                name: sessionName || `${document.getElementById('studentName').value} - ${document.getElementById('observationDate').value}`,
                studentName: document.getElementById('studentName').value,
                observerName: document.getElementById('observerName').value,
                observationDate: document.getElementById('observationDate').value,
                duration: document.getElementById('duration').value,
                notes: document.getElementById('observationNotes').value,
                observations: observations,
                currentSeconds: currentSeconds,
                currentInterval: currentInterval,
                cyclePosition: cyclePosition,
                timestamp: new Date().toISOString()
            };

            const saved = localStorage.getItem(STORAGE_KEYS.SAVED_SESSIONS);
            const sessions = saved ? JSON.parse(saved) : [];
            sessions.push(sessionData);
            localStorage.setItem(STORAGE_KEYS.SAVED_SESSIONS, JSON.stringify(sessions));

            showToast('Session saved to library!');
            return sessionData;
        }

        // Get all saved sessions
        function getSavedSessions() {
            const saved = localStorage.getItem(STORAGE_KEYS.SAVED_SESSIONS);
            return saved ? JSON.parse(saved) : [];
        }

        // Delete session from library
        function deleteSession(index) {
            const sessions = getSavedSessions();
            sessions.splice(index, 1);
            localStorage.setItem(STORAGE_KEYS.SAVED_SESSIONS, JSON.stringify(sessions));
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('observationDate').valueAsDate = new Date();
            loadSettings();
            updateTotalIntervals();
            initChart();

            // Check for saved session and prompt to restore
            const savedSession = loadCurrentSession();
            if (savedSession && savedSession.observations && savedSession.observations.length > 0) {
                if (confirm(`Found a previous session with ${savedSession.observations.length} observations from ${new Date(savedSession.timestamp).toLocaleString()}. Would you like to restore it?`)) {
                    restoreSession(savedSession);
                } else {
                    clearCurrentSession();
                }
            }

            document.getElementById('duration').addEventListener('change', () => {
                updateTotalIntervals();
                autoSaveSession();
            });

            // Auto-save notes as user types
            const notesField = document.getElementById('observationNotes');
            notesField.addEventListener('input', () => {
                autoSaveSession();
            });

            // Auto-save form fields
            document.getElementById('studentName').addEventListener('input', autoSaveSession);
            document.getElementById('observerName').addEventListener('input', autoSaveSession);
            document.getElementById('observationDate').addEventListener('change', autoSaveSession);

            // Handle sticky info bar on scroll
            let timerSection = document.getElementById('timerSection');
            let stickyBar = document.getElementById('stickyInfoBar');

            window.addEventListener('scroll', () => {
                let timerRect = timerSection.getBoundingClientRect();
                // Show sticky bar when timer section is above viewport
                if (timerRect.bottom < 0 && isRunning) {
                    stickyBar.classList.add('show');
                } else {
                    stickyBar.classList.remove('show');
                }
            });

            // Track if notes field is focused
            notesField.addEventListener('focus', () => {
                isNotesFieldFocused = true;
            });
            notesField.addEventListener('blur', () => {
                isNotesFieldFocused = false;
            });

            // Keyboard shortcuts (Ctrl+1-5 for behaviors, works even while typing in notes)
            document.addEventListener('keydown', (e) => {
                // Only work when waiting for input
                if (!waitingForInput) return;

                // Check for Ctrl+1 through Ctrl+5 (works while typing in notes)
                if (e.ctrlKey && e.key >= '1' && e.key <= '5') {
                    e.preventDefault(); // Prevent any default browser behavior

                    const keyMap = {
                        '1': 'AET',
                        '2': 'PET',
                        '3': 'OFT-M',
                        '4': 'OFT-V',
                        '5': 'OFT-P'
                    };

                    recordBehavior(keyMap[e.key]);
                }
                // Also support plain 1-5 when NOT typing in an input field (for convenience)
                else if (!isNotesFieldFocused && e.target.tagName !== 'INPUT' && e.target.tagName !== 'TEXTAREA') {
                    const keyMap = {
                        '1': 'AET',
                        '2': 'PET',
                        '3': 'OFT-M',
                        '4': 'OFT-V',
                        '5': 'OFT-P'
                    };

                    if (keyMap[e.key]) {
                        e.preventDefault();
                        recordBehavior(keyMap[e.key]);
                    }
                }
            });
        });

        function updateTotalIntervals() {
            const duration = parseInt(document.getElementById('duration').value);
            // Calculate intervals based on interval length setting
            const intervalsPerMinute = 60 / settings.intervalLength;
            totalIntervals = Math.floor(duration * intervalsPerMinute);
            document.getElementById('totalIntervals').textContent = totalIntervals;
            document.getElementById('stickyTotalIntervals').textContent = totalIntervals;
        }

        function isTargetTurn() {
            // Cycle: T T T T P (positions 0-3 are target, position 4 is peer)
            return cyclePosition < 4;
        }

        function initChart() {
            const ctx = document.getElementById('behaviorChart').getContext('2d');
            
            Chart.register(ChartDataLabels);
            
            chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['% AET', '% PET', '% TOTAL', '% OFT-M', '% OFT-V', '% OFT-P', '% TOTAL'],
                    datasets: [
                        {
                            label: 'Target Student',
                            data: [0, 0, 0, 0, 0, 0, 0],
                            backgroundColor: '#4a90d9',
                            borderColor: '#4a90d9',
                            borderWidth: 0,
                            borderRadius: 4,
                            barPercentage: 0.7,
                            categoryPercentage: 0.8
                        },
                        {
                            label: 'Comparison Peer',
                            data: [0, 0, 0, 0, 0, 0, 0],
                            backgroundColor: '#5cb85c',
                            borderColor: '#5cb85c',
                            borderWidth: 0,
                            borderRadius: 4,
                            barPercentage: 0.7,
                            categoryPercentage: 0.8
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Behavioral Observation of Students in Schools',
                            color: '#333',
                            font: { 
                                family: 'DM Sans', 
                                size: 18,
                                weight: '600'
                            },
                            padding: { bottom: 20 }
                        },
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#333',
                                font: { family: 'DM Sans', size: 12 },
                                padding: 20,
                                usePointStyle: true,
                                pointStyle: 'rect'
                            }
                        },
                        datalabels: {
                            anchor: 'end',
                            align: 'top',
                            color: '#333',
                            font: {
                                family: 'DM Sans',
                                size: 11,
                                weight: '600'
                            },
                            formatter: (value) => value > 0 ? value : ''
                        }
                    },
                    scales: {
                        x: {
                            grid: { display: false },
                            ticks: { 
                                color: '#333', 
                                font: { family: 'DM Sans', size: 11, weight: '500' }
                            }
                        },
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: '% of Intervals Observed',
                                color: '#666',
                                font: { family: 'DM Sans', size: 12 }
                            },
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            ticks: { 
                                color: '#666', 
                                font: { family: 'DM Sans' },
                                stepSize: 10
                            }
                        }
                    }
                }
            });
        }

        function startObservation() {
            if (!document.getElementById('studentName').value) {
                showToast('Please enter a student name');
                return;
            }

            // If resuming from pause, don't reset values
            if (!isPaused) {
                currentSeconds = 0;
                currentInterval = 0;
                cyclePosition = 0;
            }

            isRunning = true;
            isPaused = false;

            document.getElementById('startBtn').disabled = true;
            document.getElementById('pauseBtn').disabled = false;
            document.getElementById('stopBtn').disabled = false;
            document.getElementById('timerDisplay').classList.add('recording');
            document.getElementById('pauseBtn').innerHTML = '‚è∏ Pause';

            updateTurnDisplay();
            enableBehaviorButtons(true);

            // Start the timer
            timer = setInterval(() => {
                if (!waitingForInput) {
                    currentSeconds++;
                    updateTimerDisplay();
                    updateCountdown();

                    // Every interval, prompt for observation
                    if (currentSeconds % settings.intervalLength === 0 && currentSeconds > 0) {
                        promptForObservation();
                    }
                }
            }, 1000);
        }

        function updateCountdown() {
            const intervalLength = settings.intervalLength;
            secondsUntilNextInterval = intervalLength - (currentSeconds % intervalLength);
            if (secondsUntilNextInterval === intervalLength && currentSeconds > 0) {
                secondsUntilNextInterval = 0;
            }

            const countdownEl = document.getElementById('countdownNumber');
            const countdownContainer = document.getElementById('countdownDisplay');
            
            countdownEl.textContent = secondsUntilNextInterval;

            // Update countdown styling based on time remaining
            countdownContainer.classList.remove('warning', 'urgent');
            if (secondsUntilNextInterval <= 3 && secondsUntilNextInterval > 0) {
                countdownContainer.classList.add('urgent');
            } else if (secondsUntilNextInterval <= 5) {
                countdownContainer.classList.add('warning');
            }
        }

        function promptForObservation() {
            currentInterval++;
            document.getElementById('currentInterval').textContent = currentInterval;
            document.getElementById('stickyCurrentInterval').textContent = currentInterval;

            // Play sound
            playIntervalSound();

            // Flash the section
            document.getElementById('timerSection').classList.add('interval-flash');
            setTimeout(() => {
                document.getElementById('timerSection').classList.remove('interval-flash');
            }, 500);

            // Show the alert banner
            const alertEl = document.getElementById('recordAlert');
            const alertSubject = document.getElementById('alertSubject');
            const recordingSection = document.getElementById('recordingSection');
            
            alertEl.classList.add('show');
            recordingSection.classList.add('alert-active');
            
            // Style based on target vs peer
            if (isTargetTurn()) {
                alertEl.classList.remove('peer-turn');
                recordingSection.classList.remove('peer-alert');
                alertSubject.textContent = 'TARGET STUDENT';
            } else {
                alertEl.classList.add('peer-turn');
                recordingSection.classList.add('peer-alert');
                alertSubject.textContent = 'COMPARISON PEER';
            }

            waitingForInput = true;
            highlightBehaviorButtons(true);
        }

        function playIntervalSound() {
            if (settings.volume === 0) return; // Muted

            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();

            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);

            // Different frequencies for target vs peer
            oscillator.frequency.value = isTargetTurn() ? 800 : 600;
            oscillator.type = 'sine';

            gainNode.gain.setValueAtTime(settings.volume, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.3);

            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 0.3);
        }

        function recordBehavior(behavior) {
            if (!waitingForInput) return;

            const observation = {
                interval: currentInterval,
                time: formatTime(currentSeconds),
                subject: isTargetTurn() ? 'Target' : 'Peer',
                behavior: behavior,
                isOnTask: behavior === 'AET' || behavior === 'PET'
            };

            observations.push(observation);
            updateDataTable();
            updateStats();
            updateChart();
            updateObservationCounts();
            autoSaveSession();

            // Hide the alert banner
            document.getElementById('recordAlert').classList.remove('show', 'peer-turn');
            document.getElementById('recordingSection').classList.remove('alert-active', 'peer-alert');

            // Remove highlight from buttons
            highlightBehaviorButtons(false);
            clearButtonSelections();

            // Highlight selected button briefly
            const btn = document.getElementById(`btn-${behavior}`);
            btn.classList.add('selected');
            setTimeout(() => btn.classList.remove('selected'), 300);

            // Move to next position in cycle
            cyclePosition = (cyclePosition + 1) % 5;
            updateTurnDisplay();

            // Reset countdown display
            document.getElementById('countdownNumber').textContent = settings.intervalLength.toString();
            document.getElementById('countdownDisplay').classList.remove('warning', 'urgent');

            waitingForInput = false;

            // Check if observation complete AFTER recording
            if (currentInterval >= totalIntervals) {
                setTimeout(() => {
                    stopObservation();
                    showToast('Observation complete!');
                }, 100);
            }
        }

        function updateObservationCounts() {
            const targetObs = observations.filter(o => o.subject === 'Target').length;
            const peerObs = observations.filter(o => o.subject === 'Peer').length;

            document.getElementById('targetCount').textContent = `n=${targetObs}`;
            document.getElementById('peerCount').textContent = `n=${peerObs}`;
            document.getElementById('stickyTargetCount').textContent = `n=${targetObs}`;
            document.getElementById('stickyPeerCount').textContent = `n=${peerObs}`;
            document.getElementById('chartSubtitle').textContent =
                `Target Student n=${targetObs} ‚Ä¢ Comparison Peer n=${peerObs} ‚Ä¢ interval=15s`;
        }

        function pauseObservation() {
            if (isPaused) {
                // Resume
                startObservation();
            } else {
                // Pause
                isPaused = true;
                isRunning = false;
                clearInterval(timer);
                
                document.getElementById('startBtn').disabled = false;
                document.getElementById('pauseBtn').innerHTML = '‚ñ∂ Resume';
                document.getElementById('timerDisplay').classList.remove('recording');
                
                enableBehaviorButtons(false);
                highlightBehaviorButtons(false);
                
                showToast('Observation paused');
            }
        }

        function stopObservation() {
            isRunning = false;
            isPaused = false;
            clearInterval(timer);

            document.getElementById('startBtn').disabled = false;
            document.getElementById('pauseBtn').disabled = true;
            document.getElementById('stopBtn').disabled = true;
            document.getElementById('timerDisplay').classList.remove('recording');
            document.getElementById('pauseBtn').innerHTML = '‚è∏ Pause';
            document.getElementById('recordAlert').classList.remove('show', 'peer-turn');
            document.getElementById('recordingSection').classList.remove('alert-active', 'peer-alert');
            document.getElementById('stickyInfoBar').classList.remove('show');

            enableBehaviorButtons(false);
            highlightBehaviorButtons(false);
        }

        function resetObservation() {
            stopObservation();
            currentSeconds = 0;
            currentInterval = 0;
            cyclePosition = 0;
            observations = [];
            waitingForInput = false;
            isPaused = false;
            secondsUntilNextInterval = 15;

            document.getElementById('timerDisplay').textContent = '00:00';
            document.getElementById('stickyTimer').textContent = '00:00';
            document.getElementById('currentInterval').textContent = '0';
            document.getElementById('stickyCurrentInterval').textContent = '0';
            document.getElementById('currentTurn').textContent = 'Waiting to Start';
            document.getElementById('currentTurn').className = 'current-turn target';
            document.getElementById('targetCount').textContent = 'n=0';
            document.getElementById('peerCount').textContent = 'n=0';
            document.getElementById('stickyTargetCount').textContent = 'n=0';
            document.getElementById('stickyPeerCount').textContent = 'n=0';
            document.getElementById('chartSubtitle').textContent =
                'Target Student n=0 ‚Ä¢ Comparison Peer n=0 ‚Ä¢ interval=15s';
            document.getElementById('pauseBtn').innerHTML = '‚è∏ Pause';
            document.getElementById('countdownNumber').textContent = settings.intervalLength.toString();
            document.getElementById('countdownDisplay').classList.remove('warning', 'urgent');
            document.getElementById('recordAlert').classList.remove('show', 'peer-turn');
            document.getElementById('recordingSection').classList.remove('alert-active', 'peer-alert');

            updateDataTable();
            updateStats();
            resetChart();
            clearCurrentSession();
        }

        function updateTimerDisplay() {
            const minutes = Math.floor(currentSeconds / 60);
            const seconds = currentSeconds % 60;
            const timeStr = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            document.getElementById('timerDisplay').textContent = timeStr;
            document.getElementById('stickyTimer').textContent = timeStr;
        }

        function formatTime(totalSeconds) {
            const minutes = Math.floor(totalSeconds / 60);
            const seconds = totalSeconds % 60;
            return `${minutes}:${seconds.toString().padStart(2, '0')}`;
        }

        function updateTurnDisplay() {
            const turnEl = document.getElementById('currentTurn');
            const patternEl = document.getElementById('turnPattern');

            if (isTargetTurn()) {
                turnEl.textContent = 'RECORDING: Target Student';
                turnEl.className = 'current-turn target';
            } else {
                turnEl.textContent = 'RECORDING: Comparison Peer';
                turnEl.className = 'current-turn peer';
            }

            // Update pattern display
            const positions = ['T', 'T', 'T', 'T', 'P'];
            const patternHTML = positions.map((p, i) => {
                const isActive = i === cyclePosition;
                const isPeer = p === 'P';
                if (isActive) {
                    return `<span class="active ${isPeer ? 'peer' : ''}">${p}</span>`;
                }
                return p;
            }).join(' ');
            
            patternEl.innerHTML = `Pattern: ${patternHTML} ‚Ä¢ ${patternHTML} ‚Ä¢ ${patternHTML} ...`;
        }

        function enableBehaviorButtons(enabled) {
            document.querySelectorAll('.behavior-btn').forEach(btn => {
                btn.disabled = !enabled;
            });
        }

        function highlightBehaviorButtons(highlight) {
            document.querySelectorAll('.behavior-btn').forEach(btn => {
                if (highlight) {
                    btn.style.animation = 'soft-pulse 2s ease-in-out infinite';
                } else {
                    btn.style.animation = 'none';
                }
            });
        }

        function clearButtonSelections() {
            document.querySelectorAll('.behavior-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
        }

        function updateDataTable() {
            const tbody = document.getElementById('dataTableBody');
            
            if (observations.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="empty-state">
                            <div class="empty-state-icon">üìä</div>
                            <div>No data yet. Start an observation to begin recording.</div>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = observations.map(obs => `
                <tr>
                    <td>${obs.interval}</td>
                    <td>${obs.time}</td>
                    <td><span class="badge badge-${obs.subject.toLowerCase()}">${obs.subject}</span></td>
                    <td><strong>${obs.behavior}</strong></td>
                    <td><span class="badge badge-${obs.isOnTask ? 'on-task' : 'off-task'}">${obs.isOnTask ? 'On-Task' : 'Off-Task'}</span></td>
                </tr>
            `).reverse().join('');
        }

        function updateStats() {
            const targetObs = observations.filter(o => o.subject === 'Target');
            const peerObs = observations.filter(o => o.subject === 'Peer');

            const targetOnTaskCount = targetObs.filter(o => o.isOnTask).length;
            const peerOnTaskCount = peerObs.filter(o => o.isOnTask).length;

            const targetPercent = targetObs.length > 0 
                ? Math.round((targetOnTaskCount / targetObs.length) * 100) 
                : 0;
            const peerPercent = peerObs.length > 0 
                ? Math.round((peerOnTaskCount / peerObs.length) * 100) 
                : 0;

            document.getElementById('targetOnTask').textContent = `${targetPercent}%`;
            document.getElementById('peerOnTask').textContent = `${peerPercent}%`;
            document.getElementById('totalObservations').textContent = observations.length;
        }

        function updateChart() {
            const targetObs = observations.filter(o => o.subject === 'Target');
            const peerObs = observations.filter(o => o.subject === 'Peer');

            // Calculate percentages for each behavior
            const calcPercent = (obs, behaviors) => {
                if (obs.length === 0) return 0;
                const count = obs.filter(o => behaviors.includes(o.behavior)).length;
                return Math.round((count / obs.length) * 100);
            };

            const targetData = [
                calcPercent(targetObs, ['AET']),           // % AET
                calcPercent(targetObs, ['PET']),           // % PET
                calcPercent(targetObs, ['AET', 'PET']),    // % TOTAL On-Task
                calcPercent(targetObs, ['OFT-M']),         // % OFT-M
                calcPercent(targetObs, ['OFT-V']),         // % OFT-V
                calcPercent(targetObs, ['OFT-P']),         // % OFT-P
                calcPercent(targetObs, ['OFT-M', 'OFT-V', 'OFT-P'])  // % TOTAL Off-Task
            ];

            const peerData = [
                calcPercent(peerObs, ['AET']),
                calcPercent(peerObs, ['PET']),
                calcPercent(peerObs, ['AET', 'PET']),
                calcPercent(peerObs, ['OFT-M']),
                calcPercent(peerObs, ['OFT-V']),
                calcPercent(peerObs, ['OFT-P']),
                calcPercent(peerObs, ['OFT-M', 'OFT-V', 'OFT-P'])
            ];

            chart.data.datasets[0].data = targetData;
            chart.data.datasets[1].data = peerData;
            chart.update();
        }

        function resetChart() {
            chart.data.datasets[0].data = [0, 0, 0, 0, 0, 0, 0];
            chart.data.datasets[1].data = [0, 0, 0, 0, 0, 0, 0];
            chart.update();
        }

        function copyChartToClipboard() {
            const canvas = document.getElementById('behaviorChart');
            canvas.toBlob(blob => {
                const item = new ClipboardItem({ 'image/png': blob });
                navigator.clipboard.write([item]).then(() => {
                    showToast('Chart copied to clipboard!');
                }).catch(err => {
                    showToast('Failed to copy chart');
                    console.error(err);
                });
            });
        }

        function downloadChart() {
            const canvas = document.getElementById('behaviorChart');
            const link = document.createElement('a');
            const studentName = document.getElementById('studentName').value || 'observation';
            const date = document.getElementById('observationDate').value;
            link.download = `BOSS_${studentName}_${date}.png`;
            link.href = canvas.toDataURL('image/png');
            link.click();
            showToast('Chart downloaded!');
        }

        function exportData() {
            if (observations.length === 0) {
                showToast('No data to export');
                return;
            }

            const studentName = document.getElementById('studentName').value;
            const observerName = document.getElementById('observerName').value;
            const date = document.getElementById('observationDate').value;
            const notes = document.getElementById('observationNotes').value;

            const targetObs = observations.filter(o => o.subject === 'Target');
            const peerObs = observations.filter(o => o.subject === 'Peer');

            const calcPercent = (obs, behaviors) => {
                if (obs.length === 0) return 0;
                const count = obs.filter(o => behaviors.includes(o.behavior)).length;
                return Math.round((count / obs.length) * 100);
            };

            let csv = 'BOSS Observation Data\n';
            csv += `Student,${studentName}\n`;
            csv += `Observer,${observerName}\n`;
            csv += `Date,${date}\n`;
            csv += `Target Observations,${targetObs.length}\n`;
            csv += `Peer Observations,${peerObs.length}\n\n`;
            
            csv += 'Raw Data\n';
            csv += 'Interval,Time,Subject,Behavior,On-Task\n';
            
            observations.forEach(obs => {
                csv += `${obs.interval},${obs.time},${obs.subject},${obs.behavior},${obs.isOnTask ? 'Yes' : 'No'}\n`;
            });

            // Add summary percentages
            csv += `\nSummary Percentages\n`;
            csv += `Behavior,Target %,Peer %\n`;
            csv += `AET,${calcPercent(targetObs, ['AET'])},${calcPercent(peerObs, ['AET'])}\n`;
            csv += `PET,${calcPercent(targetObs, ['PET'])},${calcPercent(peerObs, ['PET'])}\n`;
            csv += `Total On-Task,${calcPercent(targetObs, ['AET', 'PET'])},${calcPercent(peerObs, ['AET', 'PET'])}\n`;
            csv += `OFT-M,${calcPercent(targetObs, ['OFT-M'])},${calcPercent(peerObs, ['OFT-M'])}\n`;
            csv += `OFT-V,${calcPercent(targetObs, ['OFT-V'])},${calcPercent(peerObs, ['OFT-V'])}\n`;
            csv += `OFT-P,${calcPercent(targetObs, ['OFT-P'])},${calcPercent(peerObs, ['OFT-P'])}\n`;
            csv += `Total Off-Task,${calcPercent(targetObs, ['OFT-M', 'OFT-V', 'OFT-P'])},${calcPercent(peerObs, ['OFT-M', 'OFT-V', 'OFT-P'])}\n`;

            // Add notes
            if (notes) {
                csv += `\nObservation Notes\n`;
                csv += `"${notes.replace(/"/g, '""')}"\n`;
            }

            const blob = new Blob([csv], { type: 'text/csv' });
            const link = document.createElement('a');
            link.download = `BOSS_${studentName}_${date}.csv`;
            link.href = URL.createObjectURL(blob);
            link.click();
            showToast('Data exported to CSV!');
        }

        function showToast(message) {
            const toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // Session Manager Functions
        function openSessionManager() {
            document.getElementById('sessionModal').classList.add('show');
            refreshSessionList();
        }

        function closeSessionManager() {
            document.getElementById('sessionModal').classList.remove('show');
        }

        function saveCurrentSession() {
            const studentName = document.getElementById('studentName').value;
            if (!studentName) {
                showToast('Please enter a student name first');
                return;
            }

            const sessionName = prompt('Enter a name for this session:', `${studentName} - ${document.getElementById('observationDate').value}`);
            if (sessionName) {
                saveSessionToLibrary(sessionName);
                refreshSessionList();
            }
        }

        function refreshSessionList() {
            const sessions = getSavedSessions();
            const listEl = document.getElementById('sessionList');

            if (sessions.length === 0) {
                listEl.innerHTML = '<p style="color: var(--text-muted); text-align: center; padding: 20px;">No saved sessions yet</p>';
                return;
            }

            listEl.innerHTML = sessions.map((session, index) => {
                const elapsed = session.currentSeconds ? formatTime(session.currentSeconds) : '0:00';
                const intervalInfo = session.currentInterval ? `${session.currentInterval} intervals` : `${session.observations.length} observations`;
                return `
                <div class="session-item">
                    <div class="session-info">
                        <div class="session-name">${session.name}</div>
                        <div class="session-meta">
                            ${intervalInfo} ‚Ä¢ ${elapsed} elapsed ‚Ä¢ ${new Date(session.timestamp).toLocaleDateString()}
                        </div>
                    </div>
                    <div class="session-actions">
                        <button class="btn btn-primary btn-small" onclick="loadSession(${index})">Load</button>
                        <button class="btn btn-danger btn-small" onclick="confirmDeleteSession(${index})">Delete</button>
                    </div>
                </div>
            `}).reverse().join('');
        }

        function loadSession(index) {
            const sessions = getSavedSessions();
            const session = sessions[index];
            if (session) {
                restoreSession(session);
                closeSessionManager();
            }
        }

        function confirmDeleteSession(index) {
            if (confirm('Are you sure you want to delete this session?')) {
                deleteSession(index);
                refreshSessionList();
                showToast('Session deleted');
            }
        }

        // Settings Functions
        function openSettings() {
            document.getElementById('settingsModal').classList.add('show');
            document.getElementById('intervalLengthSetting').value = settings.intervalLength;
            document.getElementById('volumeSetting').value = settings.volume;
            document.getElementById('volumeValue').textContent = Math.round(settings.volume * 100) + '%';
            document.getElementById('patternSetting').value = settings.observationPattern;
        }

        function closeSettings() {
            document.getElementById('settingsModal').classList.remove('show');
        }

        function updateIntervalSetting() {
            settings.intervalLength = parseInt(document.getElementById('intervalLengthSetting').value);
            saveSettings();
            showToast('Interval length updated. Will apply to next observation.');
        }

        function updateVolumeSetting() {
            settings.volume = parseFloat(document.getElementById('volumeSetting').value);
            document.getElementById('volumeValue').textContent = Math.round(settings.volume * 100) + '%';
            saveSettings();
        }

        function updatePatternSetting() {
            settings.observationPattern = document.getElementById('patternSetting').value;
            saveSettings();
            showToast('Observation pattern updated. Will apply to next observation.');
        }

        // Help Functions
        function openHelp() {
            document.getElementById('helpModal').classList.add('show');
        }

        function closeHelp() {
            document.getElementById('helpModal').classList.remove('show');
        }

        // Close modals on escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeSessionManager();
                closeSettings();
                closeHelp();
            }
        });
    </script>
</body>
</html>
